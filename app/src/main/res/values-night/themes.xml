<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.Smart_road" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="Theme.Smart_road" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors (чёрно-белые) -->
        <item name="colorPrimary">@color/gray_200</item>
        <item name="colorPrimaryVariant">@color/gray_400</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary colors (чёрно-белые) -->
        <item name="colorSecondary">@color/gray_300</item>
        <item name="colorSecondaryVariant">@color/gray_500</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/background_dark</item>
<!--        <item name="colorSurface">@color/surface_dark</item>-->
        <item name="colorSurface">@color/background_dark</item>
<!--        <item name="colorSurfaceVariant">@color/gray_800</item>-->
        <item name="colorSurfaceVariant">@color/background_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>

        <!-- Outline -->
        <item name="colorOutline">@color/outline_dark</item>


        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <!-- Кастомные атрибуты карточек -->
        <item name="colorCardBackground">@color/card_background_dark</item>
        <item name="colorCardText">@color/card_text_dark</item>
        <item name="emptyStateIconTint">@color/empty_state_icon_tint_dark</item>
        <item name="colorCardSelected">@color/gray_700</item>
        <item name="colorOnCardText">@color/on_surface_dark</item>
        <item name="colorCardStroke">@color/outline_dark</item>

        <!-- Совместимость со старыми атрибутами -->
        <item name="cardBackgroundColor">?attr/colorCardBackground</item>
        <item name="cardTextColor">?attr/colorCardText</item>

        <!-- Action bar -->
        <item name="actionOverflowButtonStyle">@style/MyOverflowStyleDark</item>
    </style>

    <style name="MyOverflowStyleDark" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>
</resources>