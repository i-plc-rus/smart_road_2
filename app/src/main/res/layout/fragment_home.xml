<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Карта -->
    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Разворачивающаяся панель статистики -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/stats_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Шапка с заголовком и стрелкой -->
            <LinearLayout
                android:id="@+id/stats_header"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="?attr/colorSurfaceVariant">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:text="Статистика обнаружений"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/expand_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="Развернуть"/>
            </LinearLayout>

            <!-- Контент (скрыт по умолчанию) -->
            <LinearLayout
                android:id="@+id/stats_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <!-- Плитки с цифрами -->
                <ru.iplc.smart_road.ui.view.StatsItemView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:statValue="30"
                    app:statLabel="паттернов"/>

                <ru.iplc.smart_road.ui.view.StatsItemView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:statValue="13"
                    app:statLabel="ямы"/>

                <ru.iplc.smart_road.ui.view.StatsItemView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:statValue="5"
                    app:statLabel="агрессия"/>

                <ru.iplc.smart_road.ui.view.StatsItemView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:statValue="2"
                    app:statLabel="колейность"/>
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/accel_chart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="8dp"
                android:layout_marginBottom="16dp" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



    <!-- Остальные элементы (правая панель) -->
    <!-- Правая панель: меню + кнопки -->
    <LinearLayout
        android:id="@+id/right_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:gravity="end">

        <!-- Меню (бургер) -->
        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/icon_background"
            android:layout_marginBottom="50dp">

            <ImageButton
                android:id="@+id/burger_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu"
                android:background="@android:color/transparent"
                android:contentDescription="Menu" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/icon_background"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/telemetry_toggle"
                android:layout_width="35dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/telemetry_toggle_selector"
                android:contentDescription="Управление отправкой телеметрии"
                android:scaleType="centerInside"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/icon_background"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/go_location"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/outline_adjust_24"
                android:textColor="@android:color/white"
                />
        </FrameLayout>



    </LinearLayout>
</FrameLayout>