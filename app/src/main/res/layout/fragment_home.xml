<!--&lt;!&ndash;                android:layout_gravity="center"&ndash;&gt;-->
<!--&lt;!&ndash;                android:src="@drawable/ic_menu"&ndash;&gt;-->
<!--&lt;!&ndash;                android:background="@android:color/transparent"&ndash;&gt;-->
<!--&lt;!&ndash;                android:contentDescription="Menu" />&ndash;&gt;-->
<!--        </FrameLayout>-->

        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/icon_background"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/telemetry_toggle"
                android:layout_width="35dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/telemetry_toggle_selector"
                android:contentDescription="Управление отправкой телеметрии"
                android:scaleType="centerInside"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/icon_background"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/go_location"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_adjust_24"
                android:contentDescription="Перейти к локации"
                android:scaleType="centerInside"/>
        </FrameLayout>



    </LinearLayout>
</FrameLayout>