<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Вертикальный контейнер: карта + гармошка -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Карта (будет сжиматься при раскрытии гармошки) -->
        <com.yandex.mapkit.mapview.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Разворачивающаяся панель -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stats_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent">

                <!-- Шапка -->
                <LinearLayout
                    android:id="@+id/stats_header"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:text="Статистика"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <ImageView
                        android:id="@+id/expand_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="?attr/colorOnSurface"
                        android:contentDescription="Развернуть"/>
                </LinearLayout>

                <!-- Контент -->
                <LinearLayout
                    android:id="@+id/stats_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="gone">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_margin="8dp">

                        <!-- График -->
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/accel_chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <!-- Легенда -->
                        <ImageView
                            android:id="@+id/accel_legend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="8dp"
                            android:src="@drawable/accel_legend"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Правая панель поверх карты и гармошки -->
    <LinearLayout
        android:id="@+id/right_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_gravity="top|end"
        android:layout_margin="16dp">

        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/icon_background"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/telemetry_toggle"
                android:layout_width="35dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/telemetry_toggle_selector"
                android:contentDescription="Управление телеметрией"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/icon_background"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/go_location"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_adjust_24"
                android:contentDescription="Перейти к локации"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
